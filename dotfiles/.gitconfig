[user]
	name =
	email =
[core]
	editor = vim
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.gitignore_global
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = cyan bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  co = checkout
  ci = commit
  st = status
  br = branch
  pr = pull --rebase
  rh = reset --hard HEAD
  cdf = clean -df
  cb = checkout -b
  br = branch
  cp = cherry-pick
  tree = log --graph --oneline --all --decorate    
  ri = rebase -i
  rim = rebase -i master
  re = rebase
  ru = rebase upstream/master
  fu = fetch upstream
[push]
  default = simple
[branch]
	autosetuprebase = always
[rebase]
	autostash = true
